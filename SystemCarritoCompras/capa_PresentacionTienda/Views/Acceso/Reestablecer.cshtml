
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reestablecer</title>

    <link href="~/Content/Site.css" rel="stylesheet" />

    <!-- MDB CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet">

    <!-- Incluye el CSS de Font Awesome desde el CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">



</head>
<body>


    <!-- Password Reset 8 - Bootstrap Brain Component -->
    <section class="bg-light p-3 p-md-4 p-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-xxl-11">
                    <div class="card border-light-subtle shadow-sm">
                        <div class="row g-0">
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">
                                                    <div class="text-center mb-4">
                                                        <a href="#!">
                                                            <img src="https://img.freepik.com/free-vector/bird-colorful-gradient-design-vector_343694-2506.jpg?t=st=1720212292~exp=1720215892~hmac=8f8dd8d04750f2dc98d30b25a9da2b05ca8a24403ed1f33d81dc39f48ae8f0fc&w=740" alt="BootstrapBrain Logo" width="100" height="100">
                                                        </a>
                                                    </div>
                                                    <h2 class="h4 text-center">Password Reset</h2>
                                                    <h3 class="fs-6 fw-normal text-secondary text-center m-0">Provide the email address associated with your account to recover your password.</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <form action="@Url.Action("Reestablecer","Acceso")" method="post">
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    @*<div class="form-floating mb-3" data-mdb-input-init>
                                                    <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                                    <label for="email" class="form-label">Email</label>
                                                </div>*@

                                                    <div class="d-flex flex-row align-items-center mb-0">
                                                        <i class="fas fa-envelope fa-lg me-3 fa-fw mb-4"></i>
                                                        <div data-mdb-input-init class="form-outline flex-fill mb-4">
                                                            <input type="email" id="form3Example3c" name="correo" class="form-control p-3" placeholder="test@gmaail.com" />
                                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                                        </div>
                                                    </div>

                                                    @{
                                                        if (ViewBag.Error != null)
                                                        {
                                                            <div class="form-outline mb-3">
                                                                <div class="alert alert-danger" role="alert">
                                                                    @ViewBag.Error
                                                                </div>
                                                            </div>
                                                        }
                                                    }

                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Reset Password</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                                                    <a href="#!" class="link-secondary text-decoration-none">Login</a>
                                                    <a href="#!" class="link-secondary text-decoration-none">Register</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="https://media.istockphoto.com/id/1587529291/es/foto/perezoso-de-garganta-marr%C3%B3n-foto-de-archivo.jpg?s=2048x2048&w=is&k=20&c=EAcLWfVCyXcos0c1e1opW32fpZZMMBtC0ZZWc-4GCnc=" alt="Welcome back you've been missed!">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/Scripts/bootstrap.bundle.js"></script>

</body>
</html>
