
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reestablecer</title>

    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <!-- Password Reset 8 - Bootstrap Brain Component -->
    <section class="bg-light vh-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-xxl-11">
                    <div class="card border-light-subtle shadow-sm">
                        <div class="row g-0">
                            <div class="col-12 col-md-6">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="https://images.unsplash.com/photo-1719230693769-b8b3224d4016?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Welcome back you've been missed!">
                            </div>
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">
                                                    <div class="text-center mb-4">
                                                        <a href="#!">
                                                            <img src="https://img.freepik.com/vector-premium/logotipo-abstracto-letra-m-icono-estilo-3d-diseno-montana_345408-1061.jpg?w=740" alt="BootstrapBrain Logo" width="175" height="130">
                                                        </a>
                                                    </div>
                                                    <h2 class="h4 text-center">Password Reset</h2>
                                                    <h3 class="fs-6 fw-normal text-secondary text-center m-0">Provide the email address associated with your account to recover your password.</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <form action="@Url.Action("Reestablecer","Acceso")" method="post">
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input type="email" class="form-control" name="correo" placeholder="name@example.com" required>
                                                        <label for="email" class="form-label">Email</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Reset Password</button>
                                                    </div>
                                                </div>

                                                @{
                                                    if (ViewBag.Error != null)
                                                    {
                                                        <div class="form-outline mb-3">
                                                            <div class="alert alert-danger" role="alert">
                                                                @ViewBag.Error
                                                            </div>
                                                        </div>
                                                    }
                                                }

                                            </div>
                                        </form>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                                                    <a href="@Url.Action("Index", "Acceso")" class="link-secondary text-decoration-none">Regresar a Login</a>                                            
                                                    <a href="#!" class="link-secondary text-decoration-none">Register</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Scripts/bootstrap.bundle.js"></script>

</body>
</html>
